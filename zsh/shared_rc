# bundle / update plugins
PLIST=$HOME/.dotfiles/zsh/plugins
PCACHE=$HOME/.zsh_plugins.zsh
[[ ! -f $PCACHE || $PCACHE -ot $PLIST ]] && antidote bundle <"$PLIST" >"$PCACHE"

source "$PCACHE"


